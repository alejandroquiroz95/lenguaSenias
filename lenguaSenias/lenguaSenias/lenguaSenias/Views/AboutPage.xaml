    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="8" Aspect="Fill" Source="drawable/mono_perfil_01.jpg"/>
        <Label Grid.RowSpan="8" BackgroundColor="Black" Opacity="0.5" />
        <Frame Grid.Row="2" Grid.RowSpan="8" BackgroundColor="#3498db" Margin="0,-30,0,-25" CornerRadius="25"/>
        <StackLayout  Grid.Row="1" Margin="25,0,25,0" Orientation="Horizontal" HorizontalOptions="End">
