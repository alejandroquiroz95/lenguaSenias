        <Label Grid.Row="4" Margin="25,0,25,0" Text="De: Canada" TextColor="White" FontSize="Small"/>
        <ProgressBar Grid.Row="7" Margin="25,0,25,0" Progress="0.3" ProgressColor="White"/>
        <Label Grid.Row="8" Margin="25,0,25,0" Text="Nivel: 5" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Small"/>
